generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  rooms    RoomId[] // many-to-many with RoomId
  chats    Chat[] // one-to-many with Chat
}

model RoomId {
  id        String   @id @default(uuid())
  name      String
  CreatedAt DateTime @default(now())
  users     User[] // many-to-many with User
  chats     Chat[] // one-to-many with Chat
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  userId    Int
  roomId    String

  // Relations
  user User   @relation(fields: [userId], references: [id])
  room RoomId @relation(fields: [roomId], references: [id])
}
